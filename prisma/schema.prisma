datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model VoucherTable {
  id         String   @id @default(uuid())
  name       String
  start_date DateTime
  end_date   DateTime
  amount     Float
  uvcs       UVCTable[]
}

model UVCTable {
  id          String   @id @default(uuid())
  id_voucher  String
  voucher     VoucherTable @relation(fields: [id_voucher], references: [id])
  start_date  DateTime
  end_date    DateTime
  amount      Float
  code        String   @unique
}
